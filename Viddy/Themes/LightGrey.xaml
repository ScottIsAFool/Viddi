<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="ButtonBackgroundColor">#FFACACAC</Color>
    <SolidColorBrush x:Key="ButtonBackgroundBrush"
                     Color="{StaticResource ButtonBackgroundColor}"/>
    
    <Color x:Key="RecordButtonColor">Red</Color>
    <SolidColorBrush x:Key="RecordButtonBrush"
                     Color="{StaticResource RecordButtonColor}"/>
    
    <Color x:Key="TickColor">DeepSkyBlue</Color>
    <SolidColorBrush x:Key="TickBrush"
                     Color="{StaticResource TickColor}"/>
    
    <Color x:Key="CrossColor">Red</Color>
    <SolidColorBrush x:Key="CrossBrush"
                     Color="{StaticResource CrossColor}"/>

</ResourceDictionary>
